<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:background="@color/text_color"
        android:orientation="horizontal"
        android:stretchColumns="2,1,0">

        <TableRow>

            <LinearLayout

                android:layout_margin="5dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_weather_humidity" />

                <TextView
                    android:id="@+id/humidity_txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_weather_precipitation" />

                <TextView
                    android:id="@+id/precipitation_txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_weather_pressure" />

                <TextView
                    android:id="@+id/pressure_txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_weather_wind" />

                <TextView
                    android:id="@+id/wind_txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_weather_direction" />

                <TextView
                    android:id="@+id/direction_txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test" />
            </LinearLayout>
        </TableRow>

    </TableLayout>
</LinearLayout>